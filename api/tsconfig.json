{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                                  /* Use a modern JS target for async/await, etc. */

    /* Modules */
    "module": "ESNext",                                  /* Use ES modules (for import/export). */
    "moduleResolution": "node",                          /* Needed for resolving Node-style modules. */
    "baseUrl": "./",
    "paths": {
      "@/assets/*": ["src/assets/*"],
      "@/config/*": ["src/config/*"],
      "@/constants/*": ["src/constants/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/db/*": ["src/db/*"],
      "@/docs/*": ["src/docs/*"],
      "@/helpers/*": ["src/helpers/*"],
      "@/interfaces/*": ["src/interfaces/*"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/migrations/*": ["src/migrations/*"],
      "@/models/*": ["src/models/*"],
      "@/routes/*": ["src/routes/*"],
      "@/seeders/*": ["src/seeders/*"],
      "@/services/*": ["src/services/*"],
      "@/tests/*": ["src/tests/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/validators/*": ["src/validators/*"],
    },

    /* Emit */
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
