{
  "name": "rollergrind360-ecommerce-platform",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "license": "MIT",
  "description": "RollerGrind360 E-commerce Platform",
  "author": "pachibadilla@gmail.com",
  "scripts": {
    "dev:api": "pnpm --filter rollergrind360-ecommerce-api dev",
    "dev:front": "pnpm --filter rollergrind360-ecommerce-frontend dev",
    "dev:backoffice": "pnpm --filter rollergrind360-ecommerce-backoffice dev",
    "dev": "concurrently -k --names api,frontend,backoffice \"pnpm dev:api\" \"pnpm dev:front\" \"pnpm dev:backoffice\"",
    "build": "pnpm -r build"
  },
  "dependencies": {
    "rollergrind360-ecommerce-api": "workspace:*",
    "rollergrind360-ecommerce-backoffice": "workspace:*",
    "concurrently": "^9.1.2",
    "rollergrind360-ecommerce-frontend": "workspace:*"
  },
  "devDependencies": {
    "pnpm": "^8.15.4"
  },
  "workspaces": {
    "packages": [
      "apps/api",
      "apps/frontend",
      "apps/backoffice"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}