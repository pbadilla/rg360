{
  "name": "rollergrind360-ecommerce-platform",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "license": "MIT",
  "description": "RollerGrind360 E-commerce Platform",
  "author": "pachibadilla@gmail.com",
  "scripts": {
    "dev:api": "pnpm --filter rollergrind360-ecommerce-api run dev",
    "dev:front": "pnpm --filter rollergrind360-ecommerce-frontend run dev",
    "dev:backoffice": "pnpm --filter rollergrind360-ecommerce-backoffice run dev",
    "dev": "concurrently -k --names api,front,backoffice \"pnpm dev:api\" \"pnpm dev:front\" \"pnpm dev:backoffice\"",
    "build:api": "pnpm --filter rollergrind360-ecommerce-api run build",
    "build:front": "pnpm --filter rollergrind360-ecommerce-frontend run build",
    "build:backoffice": "pnpm --filter rollergrind360-ecommerce-backoffice run build",
    "build": "pnpm -r build",
    "preview:api": "pnpm --filter rollergrind360-ecommerce-api run preview",
    "preview:front": "pnpm --filter rollergrind360-ecommerce-frontend run preview",
    "preview:backoffice": "pnpm --filter rollergrind360-ecommerce-backoffice run preview",
    "preview": "concurrently -k -n api,front,backoffice \"pnpm preview:api\" \"pnpm preview:front\" \"pnpm preview:backoffice\""
  },
  "dependencies": {
    "rollergrind360-ecommerce-api": "workspace:*",
    "rollergrind360-ecommerce-backoffice": "workspace:*",
    "concurrently": "^9.1.2",
    "rollergrind360-ecommerce-frontend": "workspace:*"
  },
  "devDependencies": {
    "pnpm": "^8.15.4"
  },
  "workspaces": {
    "packages": [
      "apps/api",
      "apps/frontend",
      "apps/backoffice"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}